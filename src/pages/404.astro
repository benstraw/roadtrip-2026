---
import Base from '../layouts/Base.astro';
---

<Base title="Lost — Road Trip Journal" description="This road doesn't go where you're looking.">
  <div class="lost">
    <img
      class="backdrop"
      src="/images/days/5/20260203_155751-lonely-road-panorama-2.jpg"
      alt="Empty West Texas highway stretching to the horizon"
    />
    <div class="scrim"></div>

    <div class="content">
      <p class="code">404</p>
      <h1>Wrong road.</h1>
      <p class="sub">This page doesn't exist. The highway does.</p>
      <a href="/" class="home-link">Back to the map</a>
    </div>

    <p class="caption">West Texas, Day 5 — somewhere past Ozona</p>
  </div>
</Base>

<style>
  :root {
    --bg: #0e0d0b;
    --text: #e8e2d6;
    --text-muted: #9a9183;
    --accent: #c8a96e;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background: var(--bg);
    color: var(--text);
    font-family: 'Raleway', sans-serif;
    height: 100dvh;
    overflow: hidden;
  }

  .lost {
    position: relative;
    width: 100%;
    height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .backdrop {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 40%;
    filter: saturate(0.7) brightness(0.55);
  }

  .scrim {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(to top, rgba(14, 13, 11, 0.92) 0%, rgba(14, 13, 11, 0.3) 40%, transparent 70%),
      linear-gradient(to bottom, rgba(14, 13, 11, 0.6) 0%, transparent 25%);
  }

  .content {
    position: relative;
    z-index: 2;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .code {
    font-family: 'Space Mono', monospace;
    font-size: clamp(5rem, 18vw, 10rem);
    font-weight: 700;
    color: var(--accent);
    line-height: 1;
    opacity: 0.9;
    letter-spacing: -0.04em;
  }

  h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
    color: var(--text);
    line-height: 1.1;
  }

  .sub {
    font-family: 'Raleway', sans-serif;
    font-size: clamp(0.9rem, 2.5vw, 1.15rem);
    color: var(--text-muted);
    letter-spacing: 0.04em;
    margin-top: 0.25rem;
  }

  .home-link {
    display: inline-block;
    margin-top: 1.5rem;
    padding: 0.65rem 1.75rem;
    border: 1px solid var(--accent);
    color: var(--accent);
    font-family: 'Raleway', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.2s, color 0.2s;
  }

  .home-link:hover {
    background: var(--accent);
    color: #0e0d0b;
  }

  .caption {
    position: absolute;
    bottom: 1.25rem;
    right: 1.5rem;
    z-index: 2;
    font-family: 'Caveat', cursive;
    font-size: 0.95rem;
    color: var(--text-muted);
    opacity: 0.7;
  }
</style>
