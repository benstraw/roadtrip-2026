---
import Base from '../layouts/Base.astro';
import DayCard from '../components/DayCard.astro';
import { days, tripTotals } from '../data/days';
---

<Base title="The Road — Philly to Los Angeles" description="9 days. 3,753 miles. Philadelphia to Los Angeles.">
<link slot="head" rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<style>
  /* ── INDEX-SPECIFIC THEME: aged atlas paper ─── */
  :root {
    --bg: #0c1420;
    --bg-deep: #070d18;
    --surface: #111e30;
    --accent: #c8a84a;
    --accent-soft: #8a7030;
    --text: #e8e0cc;
    --text-muted: #8a8068;
    --border: rgba(200,168,74,0.15);
  }

  body { background: var(--bg); color: var(--text); }

  /* ─── HERO ─────────────────────────────────────────────────────────────────── */
  .hero {
    min-height: min(60vh, 520px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: clamp(2rem, 5vw, 4rem) clamp(1.5rem, 6vw, 5rem);
    position: relative;
    overflow: hidden;
  }

  #hero-map {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  /* Darken the watercolor tiles slightly so the content box pops */
  #hero-map::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.08);
    pointer-events: none;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 680px;
  }

  .hero-content-box {
    background: rgba(7, 16, 26, 0.72);
    border: 1px solid rgba(200, 168, 74, 0.32);
    border-radius: 4px;
    padding: 1.5rem 2rem;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .hero-eyebrow {
    font-family: 'Space Mono', monospace;
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .eyebrow-line {
    width: 40px;
    height: 1px;
    background: var(--accent);
    opacity: 0.5;
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    line-height: 0.92;
    margin-bottom: 0.85rem;
    color: var(--text);
  }

  .hero-title em {
    font-style: italic;
    color: var(--accent);
    display: block;
  }

  .hero-sub {
    font-family: 'Caveat', cursive;
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--text-muted);
    margin-bottom: 1.25rem;
    line-height: 1.4;
  }

  .hero-stats {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }

  .hero-stat .val {
    font-family: 'Space Mono', monospace;
    font-size: clamp(1rem, 2vw, 1.35rem);
    font-weight: 700;
    color: var(--accent);
    line-height: 1;
  }

  .hero-stat .lbl {
    font-size: 0.65rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--bg);
    background: var(--accent);
    padding: 0.75em 1.75em;
    border-radius: 2px;
    transition: opacity 0.2s, letter-spacing 0.2s;
  }

  .hero-cta:hover { opacity: 0.85; letter-spacing: 0.2em; }

  .hero-secondary-links {
    display: flex;
    gap: 0.75rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .hero-secondary-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.68rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--accent);
    border: 1px solid rgba(200, 168, 74, 0.35);
    padding: 0.55em 1.1em;
    border-radius: 2px;
    transition: background 0.2s, border-color 0.2s, letter-spacing 0.2s;
  }

  .hero-secondary-link:hover {
    background: rgba(200, 168, 74, 0.1);
    border-color: rgba(200, 168, 74, 0.65);
    letter-spacing: 0.18em;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    font-family: 'Space Mono', monospace;
    font-size: 0.55rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    animation: bob 2s ease-in-out infinite;
    z-index: 2;
  }

  .scroll-indicator svg { width: 18px; height: 18px; }

  @keyframes bob {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(6px); }
  }

  /* ─── SECTION HEADER ───────────────────────────────────────────────────────── */
  .section-header {
    text-align: center;
    padding: 5rem 1rem 3rem;
  }

  .section-header h2 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    color: var(--text);
    margin-bottom: 0.5rem;
  }

  .section-header p {
    font-family: 'Caveat', cursive;
    font-size: 1.1rem;
    color: var(--text-muted);
  }

  /* ─── ROUTE TIMELINE ────────────────────────────────────────────────────────── */
  .timeline {
    position: relative;
    padding: 2rem 0 4rem;
    max-width: 900px;
    margin: 0 auto;
  }

  /* The central road line */
  .timeline-road {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    transform: translateX(-50%);
    background: repeating-linear-gradient(
      to bottom,
      var(--accent) 0px,
      var(--accent) 12px,
      transparent 12px,
      transparent 20px
    );
    opacity: 0.25;
  }

  .timeline-inner {
    display: grid;
    grid-template-columns: 1fr 80px 1fr;
    gap: 0 0;
    align-items: center;
  }

  /* Alternate left/right */
  .timeline-item {
    display: contents;
  }

  .timeline-item .card-slot-left {
    grid-column: 1;
    padding-right: 2rem;
    display: flex;
    justify-content: flex-end;
  }

  .timeline-item .card-slot-right {
    grid-column: 3;
    padding-left: 2rem;
    display: flex;
    justify-content: flex-start;
  }

  .timeline-item .spacer-left {
    grid-column: 1;
    padding-right: 2rem;
  }

  .timeline-item .spacer-right {
    grid-column: 3;
    padding-left: 2rem;
  }

  .timeline-item .center-marker {
    grid-column: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem 0;
    position: relative;
    z-index: 2;
  }

  .marker-circle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 2px solid var(--accent);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Space Mono', monospace;
    font-size: 0.65rem;
    font-weight: 700;
    color: var(--accent);
    background: var(--bg);
    transition: background 0.2s, transform 0.2s;
    box-shadow: 0 0 16px rgba(200,168,74,0.15);
  }

  .timeline-item:hover .marker-circle {
    background: var(--accent);
    color: var(--bg);
    transform: scale(1.1);
  }

  .card-slot-left > *,
  .card-slot-right > * {
    max-width: 360px;
    width: 100%;
  }

  /* ─── FOOTER ───────────────────────────────────────────────────────────────── */
  .site-footer {
    text-align: center;
    padding: 4rem 1rem 2rem;
    border-top: 1px dashed var(--border);
    color: var(--text-muted);
  }

  .site-footer .hand {
    font-family: 'Caveat', cursive;
    font-size: 1.1rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .site-footer small {
    font-family: 'Space Mono', monospace;
    font-size: 0.6rem;
    letter-spacing: 0.12em;
    opacity: 0.5;
  }

  .almanac-link {
    color: var(--text-muted);
    text-decoration: none;
    border-bottom: 1px solid rgba(200,168,74,0.3);
    padding-bottom: 1px;
    transition: color 0.2s;
  }
  .almanac-link:hover { color: var(--accent); }

  /* ─── RESPONSIVE ───────────────────────────────────────────────────────────── */
  @media (max-width: 720px) {
    .timeline-road { left: 1.5rem; }
    .timeline-inner {
      grid-template-columns: 40px 1fr;
    }
    .timeline-item .center-marker { grid-column: 1; }
    .timeline-item .card-slot-left,
    .timeline-item .card-slot-right {
      grid-column: 2;
      padding: 0 0 0 1rem;
      justify-content: flex-start;
    }
    .timeline-item .spacer-left,
    .timeline-item .spacer-right { display: none; }
    .marker-circle { width: 28px; height: 28px; font-size: 0.55rem; }
  }
</style>

<!-- ─── HERO ─────────────────────────────────────────────────────────────── -->
<section class="hero">
  <div id="hero-map" aria-hidden="true"></div>

  <div class="hero-content animate-fade-up">
    <div class="hero-content-box">
      <p class="hero-eyebrow">
        <span class="eyebrow-line"></span>
        Father &amp; Son — Jan 30 – Feb 7, 2025
      </p>
      <h1 class="hero-title">
        The<br/>
        <em>Road</em>
      </h1>
      <p class="hero-sub">
        Philadelphia to Los Angeles.<br/>
        A father, a son, a red Tacoma.<br/>
        Nine days. Made it.
      </p>

      <div class="hero-stats stagger">
        <div class="hero-stat">
          <span class="val">{tripTotals.odometerMiles.toLocaleString()}</span>
          <span class="lbl">total miles</span>
        </div>
        <div class="hero-stat">
          <span class="val">{tripTotals.days}</span>
          <span class="lbl">days</span>
        </div>
        <div class="hero-stat">
          <span class="val">{tripTotals.states.length}</span>
          <span class="lbl">states</span>
        </div>
      </div>

      <a href="#days" class="hero-cta">
        View the Journey
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"/>
          <polyline points="12,5 19,12 12,19"/>
        </svg>
      </a>

      <div class="hero-secondary-links">
        <a href="/mapbook" class="hero-secondary-link">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
          </svg>
          Map Book
        </a>
        <a href="/almanac" class="hero-secondary-link">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2"/><line x1="3" y1="9" x2="21" y2="9"/>
            <line x1="9" y1="21" x2="9" y2="9"/>
          </svg>
          Almanac
        </a>
      </div>
    </div>
  </div>

  <div class="scroll-indicator" aria-hidden="true">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <polyline points="6,9 12,15 18,9"/>
    </svg>
    scroll
  </div>
</section>

<!-- ─── DAY TIMELINE ──────────────────────────────────────────────────────── -->
<main id="days">
  <div class="section-header">
    <h2>Nine Days</h2>
    <p>Philly · Charlotte · Montgomery · Jackson · Austin · Terlingua · Big Bend · Tucson · Los Angeles</p>
  </div>

  <div class="container">
    <div class="timeline">
      <div class="timeline-road" aria-hidden="true"></div>
      <div class="timeline-inner" role="list">
        {days.map((day, i) => {
          const isLeft = i % 2 === 0;
          return (
            <div class="timeline-item" role="listitem">
              {isLeft ? (
                <>
                  <div class="card-slot-left">
                    <DayCard day={day} index={i} />
                  </div>
                  <div class="center-marker">
                    <div class="marker-circle">{day.day}</div>
                  </div>
                  <div class="spacer-right"></div>
                </>
              ) : (
                <>
                  <div class="spacer-left"></div>
                  <div class="center-marker">
                    <div class="marker-circle">{day.day}</div>
                  </div>
                  <div class="card-slot-right">
                    <DayCard day={day} index={i} />
                  </div>
                </>
              )}
            </div>
          );
        })}
      </div>
    </div>
  </div>
</main>

<!-- ─── FOOTER ────────────────────────────────────────────────────────────── -->
<footer class="site-footer">
  <span class="hand">Made it home. Eventually.</span>
  <small>Philadelphia → Los Angeles &nbsp;·&nbsp; January 30 – February 7, 2025</small>
  <small>
    <a href="/almanac" class="almanac-link">The Almanac →</a>
    &nbsp;·&nbsp;
    <a href="/mapbook" class="almanac-link">Map Book →</a>
    &nbsp;·&nbsp;
    <a href="/tilestyles" class="almanac-link">Map Experiments →</a>
  </small>
</footer>

<script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script is:inline src="https://unpkg.com/leaflet-gpx@1.7.0/gpx.js"></script>
<script is:inline>
(function() {
  const HERO_DAYS = [
    { color:'#7ebcd6', gpx:'/maps/Day 1 - Philly to Charlotte.gpx' },
    { color:'#a0c8e8', gpx:'/maps/Day 2 - Charlotte NC to Montgomery AL.gpx' },
    { color:'#e8b870', gpx:'/maps/Day 3 - Montgomery AL to Jackson MS.gpx' },
    { color:'#e89050', gpx:'/maps/Day 4 - Jackson MS to Austin TX.gpx' },
    { color:'#d47044', gpx:'/maps/Day 5 - Austin TX to Terilingua TX.gpx' },
    { color:'#c85848', gpx:'/maps/Day 6 - Big Bend National Park.gpx' },
    { color:'#b85860', gpx:'/maps/Day 7 - Big Bend National Park.gpx' },
    { color:'#c8a84a', gpx:'/maps/Day 8 - Terilingua TX to Tucson AZ.gpx' },
    { color:'#8cd6a8', gpx:'/maps/Day 9 - Tucson AZ to Los Angeles CA.gpx' },
  ];

  const heroMap = L.map('hero-map', {
    dragging: false, zoomControl: false, scrollWheelZoom: false,
    touchZoom: false, doubleClickZoom: false, boxZoom: false,
    keyboard: false, tap: false,
    attributionControl: true,
  });

  L.tileLayer('https://tiles.stadiamaps.com/tiles/stamen_watercolor/{z}/{x}/{y}.jpg', {
    attribution: 'Map tiles by <a href="https://stamen.com">Stamen Design</a>; <a href="https://stadiamaps.com">Stadia Maps</a>; &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
    maxZoom: 16,
  }).addTo(heroMap);

  // Set initial view while tracks load
  heroMap.setView([36.5, -95], 4);

  const boundsArr = [];
  let loaded = 0;

  HERO_DAYS.forEach(function(d) {
    var layer = new L.GPX(d.gpx, {
      async: true,
      marker_options: { startIconUrl: null, endIconUrl: null, shadowUrl: null, wptIconUrls: { '': null } },
      polyline_options: { color: d.color, weight: 2.5, opacity: 0.75, lineCap: 'round', lineJoin: 'round' },
    });
    layer.on('loaded', function(e) {
      boundsArr.push(e.target.getBounds());
      loaded++;
      if (loaded === HERO_DAYS.length) {
        var combined = L.latLngBounds(boundsArr[0].getSouthWest(), boundsArr[0].getNorthEast());
        for (var i = 1; i < boundsArr.length; i++) combined.extend(boundsArr[i]);
        heroMap.fitBounds(combined, { padding: [60, 60], animate: false });
      }
    });
    layer.addTo(heroMap);
  });
})();
</script>

<script>
  // Intersection observer for scroll-reveal on day cards
  const cards = document.querySelectorAll('.day-card');
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.15, rootMargin: '0px 0px -60px 0px' }
  );
  cards.forEach(card => {
    card.classList.add('will-reveal');
    observer.observe(card);
  });
</script>

<style is:global>
  .will-reveal .card-inner {
    opacity: 0;
    transform: rotate(var(--card-tilt)) translateY(28px);
  }
  .revealed .card-inner {
    opacity: 1;
    transform: rotate(var(--card-tilt)) translateY(0);
    transition: opacity 0.55s ease, transform 0.55s ease;
  }
  .revealed .card-inner:hover {
    transform: rotate(0) translateY(-4px);
  }
  /* Also reveal the route dot */
  .will-reveal .route-dot { opacity: 0; transition: opacity 0.4s 0.3s ease; }
  .revealed .route-dot { opacity: 1; }
</style>

</Base>
